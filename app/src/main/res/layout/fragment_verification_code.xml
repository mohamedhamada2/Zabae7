<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="verificationcodeviewmodel"
            type="com.alatheer.zabae7.home.orders.VerificationCodeViewModel" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.orders.VerificationCodeFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">
                    <ImageView
                        android:id="@+id/backimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/ic_arrow_forward_black_24dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo_semibold"
                        android:textColor="@color/lightsilver"
                        android:text="تفعيل الحساب"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/_13ssp"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@drawable/logo2"
                    android:layout_marginTop="@dimen/_40sdp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_15sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/lightsilver"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/_13ssp"
                            android:text="انتظر سيتم ارسال رسالة نصية بها رمز التحقق الي"
                            android:fontFamily="@font/cairo_semibold"
                            android:gravity="center_horizontal"
                            android:layout_margin="@dimen/_5sdp"/>
                        <TextView
                            android:id="@+id/txt_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/cairo_semibold"
                            android:text="+20 1065242773"/>
                        <TextView
                            android:id="@+id/txt_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/cairo_semibold"
                            android:text="رمز التحقق هو"
                            android:layout_marginTop="@dimen/_5sdp"/>
                        <EditText
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/pin_view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            app:itemCount="6"
                            app:itemWidth="@dimen/_40sdp"
                            app:itemHeight="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_25sdp"
                            app:lineColor="@color/lightsilver"
                            app:lineWidth="@dimen/_1sdp"
                            android:itemBackground="@color/white"
                            style="@style/PinWidget.PinView"
                            android:cursorVisible="true"
                            android:inputType="number"
                            app:hideLineWhenFilled="true"
                            app:itemRadius="@dimen/_3sdp"
                            android:textSize="@dimen/_14ssp"
                            android:background="@drawable/txt_login_background"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_25sdp"
                            android:elevation="@dimen/_5sdp"
                            android:gravity="center"/>
                        <Button
                            android:id="@+id/btn_add"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:background="@drawable/btn_login_background"
                            android:textSize="@dimen/_16ssp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:elevation="@dimen/_20sdp"
                            android:fontFamily="@font/cairo_semibold"
                            android:text="@string/confirm"
                            android:layout_marginRight="@dimen/_25sdp"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
