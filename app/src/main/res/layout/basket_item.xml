<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_3sdp"
    android:layout_margin="@dimen/_5sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp">
        <androidx.cardview.widget.CardView
            android:id="@+id/img_card"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_7sdp"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/product_img"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_card"
            android:gravity="right">
            <TextView
                android:id="@+id/txt_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_bold"
                android:textSize="@dimen/_12ssp"
                android:textColor="#4F4F4F"
                android:text="@string/news"
                android:layout_toLeftOf="@+id/txt_product_price"
                android:layout_below="@+id/txt_size_name"
                android:layout_marginRight="@dimen/_7sdp" />
            <TextView
                android:id="@+id/txt_size_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairoregular"
                android:textSize="@dimen/_12ssp"
                android:textColor="#828282"
                android:text="@string/news"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/img_card"
                android:layout_marginRight="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/txt_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_semibold"
                android:textSize="@dimen/_12ssp"
                android:textColor="#828282"
                android:text="@string/news"
                android:layout_toLeftOf="@+id/img_card"
                android:layout_below="@+id/txt_size_name"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relative5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/linear2">
            <ImageView
                android:id="@+id/delete_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic__delete2"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:id="@+id/edit_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_edit"
                android:layout_toRightOf="@id/delete_img"
                android:layout_marginLeft="@dimen/_5sdp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/img_add"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/ic__add"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/img_minus"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/ic__minus"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/txt_product_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="1"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/cairo_bold"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>