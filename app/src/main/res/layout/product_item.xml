<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/parcode_card"
    android:layout_width="358dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_3sdp"
    app:cardBackgroundColor="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/_5sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_img"
                android:layout_width="130.46dp"
                android:layout_height="130.46dp"
                app:cardElevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/product_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/card_img"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/news"
            android:fontFamily="@font/cairo_semibold"
            android:maxLines="2"
            android:textSize="16sp"/>
            <ImageView
                android:id="@+id/offer_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_rectangle_199"
                android:src="@drawable/ic_discount_shape"
                android:layout_marginTop="17.25dp"
                android:layout_marginLeft="17.25dp"
                android:padding="2.5dp"/>
            <kr.co.prnd.readmore.ReadMoreTextView
            android:id="@+id/txt_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/card_img"
            android:layout_marginTop="12dp"
            android:layout_marginRight="@dimen/_5sdp"
            android:textColor="#828282"
            android:text="ممممممممممممممممممممممممممممممممممممممممممممممممممممممممممممممممممممم اقرأ المزيد"
            android:fontFamily="@font/cairo_semibold"
            android:layout_below="@+id/txt_product_name"
            app:readMoreColor="@color/colorPrimaryDark"
            app:readMoreMaxLine="3"
            app:readMoreText="إقرأ المزيد"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/_5sdp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_add"
            android:layout_width="334dp"
            android:layout_height="56dp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/btn_order"
            android:text="@string/order_now"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:fontFamily="@font/cairo_bold"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>