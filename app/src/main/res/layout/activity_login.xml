<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="LoginViewModel"
            type="com.alatheer.zabae7.login.LoginViewModel" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.alatheer.zabae7.login.LoginActivity"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/relative_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="#333333"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="تسجيل الدخول"
            android:fontFamily="@font/cairo_bold"
            android:textSize="18sp"
            android:textColor="#fbfbfb" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp">
                    <ImageView
                        android:id="@+id/logo2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/ic_circle1"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="125.67dp"
                        android:layout_height="125.67dp"
                        android:background="@drawable/ic_circle2"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_width="106.04dp"
                        android:layout_height="95.61dp"
                        android:src="@drawable/logo"
                        android:layout_gravity="center"/>
                </FrameLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/emoji"
                    android:layout_marginTop="@dimen/_25sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="مرحباً بعودتك مرة أخرى."
                    android:fontFamily="@font/cairo_bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="@dimen/_5sdp"/>
                <RelativeLayout
                    android:layout_width="358dp"
                    android:layout_height= "48dp"
                    android:background="@drawable/txt_login_background"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_3sdp">
                    <ImageView
                        android:id="@+id/call_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_call2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"/>
                    <com.hbb20.CountryCodePicker
                        android:id="@+id/country_code_picker"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_showFlag="false"
                        app:ccp_showPhoneCode="true"
                        app:ccp_showNameCode="false"
                        app:ccp_showArrow="false"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        app:ccp_textSize="14sp"
                        android:fontFamily = "@font/cairoregular"
                        android:layout_toLeftOf="@+id/call_img"
                        android:gravity="right"/>
                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="أدخل رقم الجوال"
                        android:textColorHint="@color/lightsilver"
                        android:textSize="14sp"
                        android:gravity="center_vertical|right"
                        android:textStyle="normal"
                        android:fontFamily="@font/cairo_semibold"
                        android:inputType="number"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_toLeftOf="@+id/country_code_picker"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_centerVertical="true"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:background="@null"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="358dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="right|center_vertical"
                    android:background="@drawable/txt_login_background"
                    android:hint="أدخل كلمة المررور"
                    android:textColorHint="@color/lightsilver"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:fontFamily="@font/cairoregular"
                    android:textColor="@color/lightsilver"
                    android:inputType="textPassword"
                    android:drawableRight="@drawable/ic_lock3"
                    android:drawablePadding="@dimen/_7sdp"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/ic_eye_slash"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#4f4f4f"
                    android:text="نسيت كلمة المرور ؟"
                    android:fontFamily="@font/cairoregular"
                    android:gravity="left"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:onClick="remember_password"/>
                <Button
                    android:layout_width="358dp"
                    android:layout_height="56dp"
                    android:background="@drawable/btn_login_background"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:elevation="@dimen/_5sdp"
                    android:fontFamily="@font/cairo_bold"
                    android:onClick="Login"
                    android:text="@string/login"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginBottom="16dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4f4f4f"
                        android:textSize="14sp"
                        android:fontFamily="@font/cairoregular"
                        android:text="إنشاء حساب"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:onClick="signup"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightsilver"
                        android:textSize="14sp"
                        android:fontFamily="@font/cairoregular"
                        android:text="ليس لديك حساب بالفعل ؟ "
                        android:layout_alignParentRight="true"
                        android:onClick="register"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_15sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairoregular"
                        android:textColor="@color/colorgold"
                        android:textSize="@dimen/_14ssp"
                        android:text="تخطي"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:onClick="skip"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>

