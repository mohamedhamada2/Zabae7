<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="@dimen/_10sdp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp">
        <ImageView
            android:id="@+id/cancel_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic__cancel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/_5sdp"/>
        <TextView
            android:id="@+id/txt_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/cairo_bold"
            android:text="التفاصيل"
            android:textColor="@color/colorPrimaryDark"/>
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_delete">
            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/dark_silver"
                android:fontFamily="@font/cairo_medium2"
                android:text="الحجم:"
                android:layout_marginRight="24dp"/>
            <TextView
                android:id="@+id/txt_size_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/size"
                android:layout_toRightOf="@+id/txt_size_price"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/cairo_medium2"
                android:text="حري صغير"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/txt_size_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/cairo_medium2"
                android:text="حري صغير"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/relative1">
            <TextView
                android:id="@+id/package1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/dark_silver"
                android:fontFamily="@font/cairo_medium2"
                android:text="التغليف:"
                android:layout_marginRight="24dp"/>
            <TextView
                android:id="@+id/txt_package_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/package1"
                android:layout_toRightOf="@+id/txt_package_price"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/cairo_medium2"
                android:text="حري صغير"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/txt_package_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/cairo_medium2"
                android:text="حري صغير"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/relative2">
            <TextView
                android:id="@+id/cutting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/dark_silver"
                android:fontFamily="@font/cairo_medium2"
                android:text="التقطيع:"
                android:layout_marginRight="24dp"/>
            <TextView
                android:id="@+id/txt_cutting_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/cutting"
                android:layout_toRightOf="@+id/txt_cutting_price"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/cairo_medium2"
                android:text="حري صغير"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/txt_cutting_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/cairo_medium2"
                android:text="حري صغير"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/relative3">
            <TextView
                android:id="@+id/cutting_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/dark_silver"
                android:fontFamily="@font/cairo_medium2"
                android:text="تقطيع الرأس:"
                android:layout_marginRight="24dp"/>
            <TextView
                android:id="@+id/txt_cutting_head_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/cutting_head"
                android:layout_toRightOf="@+id/txt_cutting_head_price"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/cairo_medium2"
                android:text="حري صغير"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/txt_cutting_head_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/cairo_medium2"
                android:text="حري صغير"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>