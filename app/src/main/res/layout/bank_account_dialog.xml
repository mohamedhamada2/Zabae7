<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="@dimen/_10sdp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp">
        <ImageView
            android:id="@+id/cancel_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic__cancel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/txt_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:fontFamily="@font/cairo_bold"
            android:text="معلومات التحويل البنكى"
            android:textColor="@color/colorPrimaryDark"/>
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_delete"
            android:background="@drawable/bank_account_et_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="إسم البنك :"
                android:textColor="@color/dark_silver"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:fontFamily="@font/cairo_medium2"
                android:paddingRight="12dp"
                android:paddingTop="6dp"/>
            <TextView
                android:id="@+id/txt_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:fontFamily="@font/cairo_bold"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/linear2"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear1"
            android:background="@drawable/bank_account_et_bg">
            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رقم الـ IPAN :"
                android:textColor="@color/dark_silver"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:fontFamily="@font/cairo_medium2"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/txt_ipan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:fontFamily="@font/cairo_bold"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:layout_below="@id/txt"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/copy_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:background="@drawable/ic_copy"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear2"
            android:background="@drawable/bank_account_et_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="إسم مالك الحساب :"
                android:textColor="@color/dark_silver"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:fontFamily="@font/cairo_medium2"
                android:paddingRight="12dp"
                android:paddingTop="6dp"/>
            <TextView
                android:id="@+id/txt_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:fontFamily="@font/cairo_bold"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_pay"
            android:layout_width="310dp"
            android:layout_height="49dp"
            android:background="@drawable/btn_login_background"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:elevation="@dimen/_10sdp"
            android:fontFamily="@font/cairo_semibold"
            android:text="تأكيد الدفع"
            android:onClick="pay"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>