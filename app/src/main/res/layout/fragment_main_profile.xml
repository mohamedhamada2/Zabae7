<?xml version="1.0" encoding="utf-8"?>
<layout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".home.profile.MainProfileFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginBottom="@dimen/_70sdp">
                    <RelativeLayout
                        android:id="@+id/relative_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:background="#333333"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/profile"
                            android:fontFamily="@font/cairo_bold"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/white"
                            android:layout_marginRight="@dimen/_5sdp"/>
                        <FrameLayout
                            android:id="@+id/basket_frame"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/_5sdp">
                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="left|center"
                                android:background="@drawable/ic_shopping_cart1" />
                            <TextView
                                android:id="@+id/txt_basket_num"
                                android:layout_width="@dimen/_14sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:fontFamily="@font/cairo_bold"
                                android:textSize="@dimen/_7ssp"
                                android:textColor="@color/white"
                                android:text="0"
                                android:layout_gravity="right"
                                android:gravity="center"
                                android:background="@drawable/ic_count_circle"/>

                        </FrameLayout>
                        <FrameLayout
                            android:id="@+id/notification_frame"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/basket_frame"
                            android:layout_marginLeft="@dimen/_2sdp">
                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic__6_notification" />
                            <TextView
                                android:id="@+id/txt_notification_num"
                                android:layout_width="@dimen/_14sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:fontFamily="@font/cairo_bold"
                                android:textSize="@dimen/_7ssp"
                                android:textColor="@color/white"
                                android:text="0"
                                android:layout_gravity="right"
                                android:gravity="center"
                                android:background="@drawable/ic_count_circle"/>

                        </FrameLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <FrameLayout
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_140sdp"
                    android:layout_gravity="center_horizontal|bottom">
                    <ImageView
                        android:id="@+id/logo2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_circle1"
                        android:layout_gravity="center"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_img"
                        android:layout_width="@dimen/_115sdp"
                        android:layout_height="@dimen/_115sdp"
                        android:layout_gravity="center"
                        app:civ_border_color="#F2C94C"
                        app:civ_border_width="2dp"/>
                </FrameLayout>
            </FrameLayout>
            <TextView
                android:id="@+id/txt_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="محمد حمادة"
                android:layout_marginTop="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/cairoregular"
                android:textColor="@color/colorPrimaryDark"
                android:text="01065242773"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/relative1"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                app:cardBackgroundColor="@color/white">
                <RelativeLayout
                    android:id="@+id/relative_basket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/user_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_user_square__2_"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/_10sdp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/user_img2"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="@string/edit_profile"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/cairo_semibold"
                        android:textSize="16sp"/>
                    <ImageView
                        android:id="@+id/arrow_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_right2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="@dimen/_10sdp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/relative2"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardBackgroundColor="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/lock_img"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:background="@drawable/ic_lock2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/_10sdp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/lock_img"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="تغيير كلمة المرور"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/cairo_semibold"
                        android:textSize="16sp"/>
                    <ImageView
                        android:id="@+id/arrow_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_right2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="@dimen/_10sdp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/relative3"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardBackgroundColor="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/terms_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_security_safe"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/_10sdp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/terms_img"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="سياسة الخصوصية"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/cairo_semibold"
                        android:textSize="16sp"/>
                    <ImageView
                        android:id="@+id/arrow_img3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_right2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="@dimen/_10sdp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/relative4"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardBackgroundColor="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/about_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_info_1"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/_10sdp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/about_img"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="عن التطبيق"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/cairo_semibold"
                        android:textSize="16sp"/>
                    <ImageView
                        android:id="@+id/arrow_img4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_right2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="@dimen/_10sdp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/relative5"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardBackgroundColor="#EB5757">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/logout_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_logout__1"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/_10sdp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/logout_img"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="تسجيل الخروج"
                        android:textColor="@color/white"
                        android:fontFamily="@font/cairo_semibold"
                        android:textSize="16sp" />
                    <ImageView
                        android:id="@+id/arrow_img5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_right2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="@dimen/_10sdp"
                        android:backgroundTint="@color/white"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>
</layout>
