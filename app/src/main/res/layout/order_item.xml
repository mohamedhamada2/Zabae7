<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6sdp"
    app:cardElevation="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_7sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp">
        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/cairo_bold"
            android:textSize="@dimen/_14ssp"
            android:text="@string/order_num"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/txt_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/order_num"
            android:fontFamily="@font/cairo_semibold"
            android:textSize="@dimen/_14ssp"
            android:text="135669"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/txt_order_status"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_semibold"
            android:textSize="@dimen/_11ssp"
            android:text="قيد الانتظار"
            android:gravity="center"
            android:textColor="#F2994A"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/status_waiting_bg"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txt_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairoregular"
            android:layout_gravity="right"
            android:textSize="@dimen/_12ssp"
            android:textColor="#828282"
            android:text="2022-07-24 : 12:37 مساء"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/order_line_bg"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp">
            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/cairoregular"
                android:textSize="@dimen/_12ssp"
                android:text="@string/order_total_price"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:id="@+id/txt_order_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/total_price"
                android:fontFamily="@font/cairo_semibold"
                android:textSize="@dimen/_12ssp"
                android:text="12000 ريال"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>