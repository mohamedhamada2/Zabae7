<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="@dimen/_10sdp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp">
        <ImageView
            android:id="@+id/cancel_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic__cancel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/_5sdp"/>
        <ImageView
            android:id="@+id/delete_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_group_87"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"/>
        <TextView
            android:id="@+id/txt_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delete_img"
            android:textSize="18sp"
            android:fontFamily="@font/cairo_bold"
            android:text="إضافة طلبك للعربة."
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/txt_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_delete"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/cairoregular"
            android:text="تم إضافة طلبك للعربة بنجاح يمكنك متابعة التصفح او الإنتقال لإتمام إستكمال الطلب"
            android:textColor="#828282"
            android:gravity="center_horizontal"/>
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="310dp"
            android:layout_height="49dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_details"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_continue_bg"
            android:textSize="16sp"
            android:text="متابعة التصفح"
            android:fontFamily="@font/cairo_bold"/>
        <Button
            android:id="@+id/btn_order"
            android:layout_width="310dp"
            android:layout_height="49dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_continue"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_complete_order"
            android:textSize="16sp"
            android:text="إستكمال الطلب"
            android:fontFamily="@font/cairo_bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>